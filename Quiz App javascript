alert(
  "NOTE : You have 10 minutes to complete the quiz. You time starts now. Good Luck !"
);

function showQues(e) {
  var ques = document.getElementById("ques");
  ques.innerHTML = "Q" + (e + 1) + ")" + questionsArray[e].question;

  var options = document.getElementsByClassName("label");

  for (var i = 0; i < options.length; i++) {
    options[i].innerHTML = questionsArray[e].options[i];
  }
}

count = 0;
score = 0;

function calc() {
  var radios = document.getElementsByClassName("radiobtn");
  var option = document.getElementsByClassName("label");
  for (var i = 0; i < radios.length; i++) {
    if (radios[i].checked == true) {
      if (option[i].innerHTML == questionsArray[count].answer) {
        score++;
      }
    }
  }
}

function nextQues() {
  calc();
  var radios = document.getElementsByClassName("radiobtn");
  if (count < questionsArray.length - 1) {
    for (var i = 0; i < radios.length; i++) {
      if (radios[i].checked == true) {
        count++;
        showQues(count);
        radios[i].checked = false;
      }
    }
  } else {
    alert("your score is ==>" + score);
    var main = document.getElementsByClassName("main");
    main[0].innerHTML = "";
  }
}

let time = 6000 / 10;
let refreshIntervalId = setInterval(updateCountdown, 1000);

function updateCountdown() {
  var minutes = Math.floor(time / 60);
  let seconds = time % 60;

  seconds = seconds < 10 ? "0" + seconds : seconds;
  var contdownEl = document.getElementById("f1");
  contdownEl.innerHTML = `${minutes}:${seconds}`;

  time--;

  if (time < 0) {
    clearInterval(refreshIntervalId);
    var clear = document.getElementById("quiz");
    clear.innerHTML = "Thank You";
    alert("Time Up");
  }
}
